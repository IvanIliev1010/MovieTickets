
@model IEnumerable<Movie>
@{
    ViewData["Title"] = "List of Movies";
}
<div class="row">
    <div class="col-md 8 offset-1 md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ImageURL)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Descripiton)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="allign-middle">
                            <img src="@item.ImageURL" class="rounded" alt="@item.Name" style="max-width:150px" />
                        </td>
                        <td class="allign-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="allign-middle">
                            @Html.DisplayFor(modelItem => item.Descripiton)
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>