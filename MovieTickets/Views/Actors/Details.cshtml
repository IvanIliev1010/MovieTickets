@model Actor

@{
    ViewData["Title"] = "Add an Actor";
}

<div class="row-text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img class="rounded" style="max-width:150px" id="ProfilePicturePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePictureURL" class="control-label"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" readonly />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biograhpy" class="control-label"></label>
                        <input asp-for="Biograhpy" class="form-control" readonly />
                        <span asp-validation-for="Biograhpy" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-info float-right" asp-action="Edit" asp-route-id="@Model.ActorId">Edit</a>
                        <a class="btn btn-secondary" asp-action="Index">Show all</a>
                    </div>
              
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
        
    </script>
}